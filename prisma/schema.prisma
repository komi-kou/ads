// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accounts         Account[]
  scheduledReports ScheduledReport[]
  reports          Report[]

  @@map("users")
}

model Account {
  id           String   @id @default(cuid())
  userId       String
  platform     String   // 'meta' or 'google'
  accountId    String   // プラットフォーム側のアカウントID
  accountName  String
  accessToken  String?  @db.Text
  refreshToken String?  @db.Text
  expiresAt    DateTime?
  isActive     Boolean  @default(true)
  metadata     Json?    // 追加のメタデータ（developerToken等）
  lastSyncedAt DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  reports      Report[]
  scheduledReports ScheduledReport[]

  @@unique([userId, platform, accountId])
  @@index([userId])
  @@index([platform, accountId])
  @@map("accounts")
}

model Report {
  id          String   @id @default(cuid())
  userId      String
  accountId   String
  platform    String
  reportType  String   // 'weekly', 'monthly', 'custom'
  dateRange   Json     // { start: string, end: string }
  metrics     Json     // 分析結果のメトリクス
  insights    Json?    // インサイト
  recommendations Json? // 推奨事項
  summary     String?  @db.Text
  status      String   @default("completed") // 'completed', 'failed', 'pending'
  sentToChatwork Boolean @default(false)
  chatworkRoomId String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  account Account @relation(fields: [accountId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([accountId])
  @@index([createdAt])
  @@map("reports")
}

model ScheduledReport {
  id            String   @id @default(cuid())
  userId        String
  accountId     String
  platform      String
  frequency     String   // 'weekly', 'monthly'
  dayOfWeek     Int?     // 0-6 (Sunday-Saturday) for weekly
  dayOfMonth    Int?     // 1-31 for monthly
  chatworkRoomId String? // チャットワークのルームID
  chatworkApiToken String? @db.Text // チャットワークAPIトークン
  isActive      Boolean  @default(true)
  lastRunAt     DateTime?
  nextRunAt     DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  account Account @relation(fields: [accountId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([accountId])
  @@index([nextRunAt])
  @@map("scheduled_reports")
}